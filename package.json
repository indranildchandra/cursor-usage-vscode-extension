{
  "name": "cursor-usage",
  "displayName": "Cursor Usage",
  "description": "Track your remaining Cursor fast-premium requests in the status bar, with usage-based spending shown when exhausted",
  "version": "1.3.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YossiSaadi/cursor-usage-vscode-extension.git"
  },
  "author": "Yossi Saadi",
  "publisher": "yossisa",
  "icon": "./assets/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorUsage.insertCookie",
        "title": "Insert cookie value",
        "category": "Cursor Usage Extension"
      },
      {
        "command": "cursorUsage.refresh",
        "title": "Refresh Usage",
        "category": "Cursor Usage Extension"
      },
      {
        "command": "cursorUsage.forceRefresh",
        "title": "Force Re-initialize",
        "category": "Cursor Usage Extension"
      },
      {
        "command": "cursorUsage.openSettings",
        "title": "Open Settings",
        "category": "Cursor Usage Extension"
      },
      {
        "command": "cursorUsage.setTeamId",
        "title": "Set Team ID",
        "category": "Cursor Usage Extension"
      },
      {
        "command": "cursorUsage.setPollMinutes",
        "title": "Set Poll Interval",
        "category": "Cursor Usage Extension"
      },
      {
        "command": "cursorUsage.testNotification",
        "title": "Test Daily Notification",
        "category": "Cursor Usage Extension",
        "when": "isDevelopment"
      }
    ],
    "configuration": {
      "title": "Cursor Usage",
      "properties": {
        "cursorUsage.pollMinutes": {
          "type": "number",
          "default": 30,
          "description": "How often to refresh the remaining requests count (in minutes)",
          "minimum": 1
        },
        "cursorUsage.teamId": {
          "type": "string",
          "default": "",
          "description": "(Optional) Your Cursor Team ID. Leave empty or set to 'auto' to auto-detect. If you belong to multiple teams, specify which one to track. Find the ID in your browser's developer tools (in the 'teams' API request) when viewing the Cursor dashboard."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile-extension --minify",
    "compile-extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "compile-tests": "tsc -p ./",
    "watch": "yarn compile-extension --watch",
    "compile": "yarn compile-extension && yarn compile-tests",
    "test": "node ./dist/test/runTest.js",
    "test:ci": "node ./dist/test/runTest.js",
    "test:verbose": "node ./dist/test/runTest.js",
    "lint:markdown": "find . -name '*.md' -not -path './node_modules/*' -not -path './.vscode-test/*' -exec markdownlint {} \\;",
    "package-vsix": "vsce package",
    "package": "vsce package --no-dependencies",
    "publish:ovsx": "dotenv -e .env -- npx ovsx publish"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.0",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.104.0",
    "@vscode/test-electron": "2.3.9",
    "@vscode/vsce": "^2.21.1",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.19.5",
    "markdownlint-cli": "^0.45.0",
    "mocha": "^10.4.0",
    "prettier": "^3.6.2",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/node-notifier": "^8.0.5",
    "node-notifier": "^10.0.1"
  },
  "resolutions": {
    "undici": "5.28.3"
  }
}
